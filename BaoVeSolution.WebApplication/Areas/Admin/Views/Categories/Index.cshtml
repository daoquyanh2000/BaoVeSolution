@model IEnumerable<BaoVeSolution.WebApplication.DB.Entities.Category>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var pagedList = (IPagedList)Model;

}
<script>
$(document).ready(function(){
    $("#inputSearch").on("keyup", function() {
    var value = $(this).val().toLowerCase();
        $("table >  tbody > tr").filter(function () {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
<h2>Danh sách danh mục</h2>

<div class="d-flex">
    <div>
        @Html.ActionLink("Thêm mới", "Create")
    </div>
    <div class="ms-auto">
        <label for="inputSearch">Tìm kiếm</label>
        <input type="text" name="inputSearch" id="inputSearch" placeholder="Tìm kiếm..." />
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParentId)
                </th>
                <th>
                    Người tạo
                </th>
                <th>
                    Người sửa
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryState)
                </th>
                <th>Chức năng</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*    <td>
                        @Html.DisplayFor(modelItem => item.ParentId)
                    </td>*@
                @{
                        var listParentCategory = (List<BaoVeSolution.WebApplication.DB.Entities.Category>)Session["listParentCategory"];
                        var parrentCategory = listParentCategory.Where(x => x.Id == item.ParentId).FirstOrDefault();
                }
                @if (parrentCategory != null)
                    {
                <td>@parrentCategory.Name</td>
                    }
                    else
                    {
                <td>Trống</td>

                    }
                <td>
                    @Html.DisplayFor(model => item.UserCreate.UserName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.UserUpdate.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryState)
                </td>
                <td>
                    @if (Session["UserIsAdmin"] != null && (bool)Session["UserIsAdmin"] == true && item.CategoryState == CategoryState.Pending)
                        {

                    <span>
                        @Html.ActionLink("Duyệt bài", "Approve", new { id = item.Id })
                        |
                    </span>
                        }
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id })

                    @if (Session["UserIsAdmin"] != null && (bool)Session["UserIsAdmin"] == true)
                        {

                    <span>
                        |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                    </span>
                        }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-lg-12">
    @Html.PagedListPager(pagedList, page => Url.Action("Index",
new { page = page }))
</div>